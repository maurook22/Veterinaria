@model Pericles.Models.Consulta

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MascotaID" class="control-label"></label>
                <select asp-for="MascotaID" class="form-control" asp-items="ViewBag.MascotaID"></select>
                <span asp-validation-for="MascotaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinarioID" class="control-label"></label>
                <select asp-for="VeterinarioID" class="form-control" asp-items="ViewBag.VeterinarioID"></select>
                <span asp-validation-for="VeterinarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
